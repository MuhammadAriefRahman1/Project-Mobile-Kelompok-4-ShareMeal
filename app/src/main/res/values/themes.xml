<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectMobileKelompok4ShareMeal" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#1F5649</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>

        <item name="android:fontFamily">@font/figtree</item>

    </style>

    <!--    Change default button styles -->
    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/figtree_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/ic_edit_text_bg</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
    </style>

    <!--    Change default EditText styles -->
    <style name="BaseInput" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/figtree_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/ic_edit_text_bg</item>
    </style>


    <style name="Theme.ProjectMobileKelompok4ShareMeal" parent="Base.Theme.ProjectMobileKelompok4ShareMeal" />
</resources>