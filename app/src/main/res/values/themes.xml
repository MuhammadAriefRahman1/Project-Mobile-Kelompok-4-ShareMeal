<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectMobileKelompok4ShareMeal" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/danger</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/figtree</item>

    </style>

    <!--    Change default button styles -->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/figtree_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="elevation">0dp</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">@drawable/primary_button</item>-->
        <!--        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>-->
    </style>

    <style name="TransparentButton" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="contentPaddingBottom">12dp</item>
        <item name="contentPaddingTop">12dp</item>
    </style>

    <style name="OutlinedRoundedCornersInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>


    <!--    Change default EditText styles -->
    <style name="BaseInput" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:fontFamily">@font/figtree_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/border_bottom</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <!-- Other optional attributes -->
    </style>

    <style name="Theme.ProjectMobileKelompok4ShareMeal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProjectMobileKelompok4ShareMeal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>